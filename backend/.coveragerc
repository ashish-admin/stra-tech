# Coverage configuration for Political Strategist test suite
# Defines coverage requirements, thresholds, and exclusions

[run]
source = .
omit = 
    */venv/*
    */virtualenv/*
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */alembic/*
    */celery_worker.py
    */wsgi.py
    */gunicorn_config.py
    */manage.py
    setup.py
    conftest.py

[report]
# Coverage reporting configuration
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if False:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Coverage thresholds for different module types
precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov
title = Political Strategist Coverage Report

[xml]
output = coverage.xml

# Quality gates - minimum coverage requirements
# Overall project: 80%
# Critical modules (strategist/*): 90%
# Unit tests: 85%
# Integration tests: 75%
# API endpoints: 85%