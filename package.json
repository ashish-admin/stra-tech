{
  "name": "lokdarpan",
  "version": "1.0.0",
  "description": "Political Intelligence Dashboard E2E Testing Suite",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:dashboard": "playwright test tests/e2e/dashboard.spec.js",
    "test:components": "playwright test tests/e2e/components.spec.js",
    "test:interactions": "playwright test tests/e2e/interactions.spec.js",
    "test:error-handling": "playwright test tests/e2e/error-handling.spec.js",
    "test:performance": "playwright test tests/e2e/performance.spec.js --project=performance",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.js",
    "test:auth": "playwright test tests/e2e/auth.setup.js",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen http://localhost:5173",
    "dev:full": "concurrently \"cd backend && source venv/bin/activate && flask run\" \"cd frontend && npm run dev\"",
    "test:ci": "playwright test --reporter=html,junit,json",
    "test:performance:ci": "playwright test tests/e2e/performance.spec.js --project=performance --reporter=json"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "playwright": "^1.54.2",
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "i18next": "^25.4.1",
    "react-i18next": "^15.7.2"
  }
}