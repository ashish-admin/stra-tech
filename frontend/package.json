{
  "name": "lokdarpan-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:interactive": "vitest --run src/test/interactive",
    "test:interactive:watch": "vitest --watch src/test/interactive",
    "test:performance": "vitest --run src/test/interactive/Performance.test.jsx",
    "test:ux": "vitest --run src/test/interactive/UserExperience.test.jsx",
    "lint": "echo 'No linter configured yet' && exit 0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.3",
    "axios": "^1.6.7",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^12.23.12",
    "i18next": "^25.4.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-calendar-heatmap": "^1.9.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-grid-layout": "^1.4.4",
    "react-i18next": "^15.1.0",
    "react-leaflet": "^4.2.1",
    "react-resizable": "^3.0.5",
    "react-window": "^1.8.11",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.20",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.3",
    "terser": "^5.43.1",
    "vite": "^7.0.6",
    "vite-bundle-analyzer": "^1.2.1",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./src/test/setup.js"
    ],
    "globals": true,
    "css": true,
    "coverage": {
      "provider": "v8",
      "include": [
        "src/components/**/*.{js,jsx,ts,tsx}",
        "src/hooks/**/*.{js,jsx,ts,tsx}",
        "src/context/**/*.{js,jsx,ts,tsx}"
      ],
      "exclude": [
        "src/test/**",
        "src/**/*.test.{js,jsx,ts,tsx}",
        "src/**/*.stories.{js,jsx,ts,tsx}"
      ],
      "reporter": [
        "text",
        "json",
        "html"
      ],
      "reportsDirectory": "./coverage"
    }
  }
}
