{
  "dashboard": {
    "id": null,
    "title": "LokDarpan Political Intelligence Dashboard",
    "tags": ["lokdarpan", "political", "campaign"],
    "timezone": "Asia/Kolkata",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"lokdarpan-backend\"}",
            "legendFormat": "Backend Status"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database Status"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Cache Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(traefik_service_requests_total{service=~\".*backend.*\"}[5m])",
            "legendFormat": "{{service}} - {{method}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 3,
        "title": "Response Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(traefik_service_request_duration_seconds_bucket{service=~\".*backend.*\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(traefik_service_request_duration_seconds_bucket{service=~\".*backend.*\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 4,
        "title": "Political Strategist Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(traefik_service_requests_total{service=~\".*backend.*\", path=~\".*strategist.*\"}[5m])",
            "legendFormat": "Strategist API Calls"
          },
          {
            "expr": "rate(traefik_service_requests_total{service=~\".*backend.*\", path=~\".*stream.*\"}[5m])",
            "legendFormat": "SSE Streaming"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14}
      },
      {
        "id": 5,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(postgresql_queries_total[5m])",
            "legendFormat": "Queries/sec"
          },
          {
            "expr": "postgresql_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
      },
      {
        "id": 6,
        "title": "Redis Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec"
          },
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22}
      },
      {
        "id": 7,
        "title": "Geographic User Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (country) (rate(traefik_service_requests_total[5m]))",
            "legendFormat": "{{country}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22}
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(traefik_service_requests_total{code=~\"4..|5..\"}[5m])",
            "legendFormat": "HTTP Errors"
          },
          {
            "expr": "rate(traefik_service_requests_total{code=~\"2..\"}[5m])",
            "legendFormat": "HTTP Success"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 30}
      },
      {
        "id": 9,
        "title": "Campaign Activity Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (ward) (rate(traefik_service_requests_total{path=~\".*ward.*\"}[1h]))",
            "legendFormat": "{{ward}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 38}
      },
      {
        "id": 10,
        "title": "AI Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "lokdarpan_ai_service_health{service=\"gemini\"}",
            "legendFormat": "Gemini 2.5 Pro"
          },
          {
            "expr": "lokdarpan_ai_service_health{service=\"perplexity\"}",
            "legendFormat": "Perplexity AI"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 46}
      },
      {
        "id": 11,
        "title": "News Ingestion Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lokdarpan_news_articles_processed_total[5m])",
            "legendFormat": "Articles Processed/sec"
          },
          {
            "expr": "lokdarpan_news_processing_queue_size",
            "legendFormat": "Queue Size"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 46}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}